<%= form_for(@verbindung) do |f| %>
  <% if @verbindung.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@verbindung.errors.count, "error") %> prohibited this verbindung from being saved:</h2>

      <ul>
      <% @verbindung.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
