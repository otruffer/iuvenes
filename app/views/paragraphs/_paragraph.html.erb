<div class='row entry'>

  <div class='row entry_header'>
    <div class='column large-9 entry_title'>
      <%= paragraph.title %>
    </div>
    <div class='column large-3 entry_date right'>
    </div>
  </div>

  <div class='row entry_body'>
    <div class='column entry_content'>
      <%= simple_format(paragraph.content) %>
    </div>
  </div>

  <div class='row entry_footer'>
    <div class='column large-9 right entry_buttons'>
      <ul class='button-group'>

        <% if (current_user.root? || (current_user.admin? && current_user.verbindung = paragraph.verbindung)) then %>
            <li class='button small secondary'>
              <%= link_to 'Bearbeiten', edit_verbindung_paragraph_url(@verbindung, paragraph) %>
            </li>
            <li class='button small secondary'>
              <%= link_to 'LÃ¶schen', verbindung_paragraph_path(@verbindung, paragraph), method: :delete, data: { confirm: 'Sind Sie sicher?' } %>
            </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>